generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Profile {
  DEFAULT
  MANAGER
  ADMIN
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  profile       Profile
  password      String
  cars          Car[]
  creationDate  DateTime
  updateDate    DateTime
  version       Int
  userCreator   User?    @relation("UserCreatedBy", fields: [userCreatorId], references: [id])
  userCreatorId Int?

  createdUsers User[] @relation("UserCreatedBy")
  createdCars  Car[]  @relation("CarCreatedBy")
}

model Car {
  id           Int      @id @default(autoincrement())
  name         String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int
  isStocked    Boolean  @default(false)
  creationDate DateTime @default(now())
  updateDate   DateTime @updatedAt
  version      Int      @default(1)
  createdBy    User     @relation("CarCreatedBy", fields: [createdById], references: [id])
  createdById  Int
}
