generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Profile {
  DEFAULT
  MANAGER
  ADMIN
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  profile  Profile
  password String
  cars   Car[]
}

model Car {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId
}
