generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Profile {
  DEFAULT
  MANAGER
  ADMIN
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  profile  Profile
  password String
  cars     Car[]
  Test     Test[]
}

model Car {
  id        Int     @id @default(autoincrement())
  name      String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  isStocked Boolean @default(false)
}
model Test {
  id              Int      @id @default(autoincrement())
  modifiedBy      User     @relation(fields: [modifiedById], references: [id])
  modifiedById    Int
  creationDate    DateTime @default(now())
  updateDate      DateTime @updatedAt
  versionNum      Int
  history         HistoryTest[]
}

model HistoryTest {
  id              Int      @id @default(autoincrement())
  testId          Int
  test            Test @relation(fields: [testId],references: [id])
  creationDate    DateTime @default(now())
  updateDate      DateTime @updatedAt
  versionNumber   Int
  method          String
}

